---
import { withBase } from "@/utils/withBase";

export interface Props {
  id?: string;
  href: string;
  class?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  target?: string;
  rel?: string;
}

const {
  id,
  href,
  class: className = "",
  ariaLabel,
  title,
  disabled = false,
  target,
  rel,
} = Astro.props;

const relAttr =
  rel ?? (target === "_blank" ? "noreferrer noopener" : undefined);
const normalizedHref = href ?? "";
const computedHref =
  normalizedHref.startsWith("/") && !normalizedHref.startsWith("//")
    ? withBase(normalizedHref)
    : normalizedHref || "#";
---

{
  disabled ? (
    <span
      id={id}
      class:list={["group inline-block", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      id={id}
      href={computedHref}
      class:list={["group inline-block hover:text-accent", className]}
      aria-label={ariaLabel}
      title={title}
      target={target}
      rel={relAttr}
    >
      <slot />
    </a>
  )
}
