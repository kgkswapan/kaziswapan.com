---
import type { CollectionEntry } from "astro:content";

interface Props {
  quote: CollectionEntry<"quotes">;
}

const { quote } = Astro.props;
const { quote: text, author, source } = quote.data;
---

<article class="rounded-2xl border border-border/70 bg-background/80 p-6 text-center shadow-sm dark:bg-slate-900/40">
  <p class="text-lg italic text-foreground/90">“{text}”</p>
  <p class="mt-3 text-sm font-semibold text-foreground">{author}</p>
  {source && <p class="text-xs text-muted">{source}</p>}
</article>
